<header class="topcolor">
  <div class="container row  profilebuttons">
    <div class="col-9 col-sm ">
      <a href="/"><img src="./images/Braverabbits.png" class="img-fluid logoh" alt="..."><img></a><a class ="headdingtitle" href="/">THE BOOK WAS BETTER</a>
    </div>

    <div class="col-3 loginbuttons ">
      {{#if logged_in}}
      <a href="/profile" class="buttons buttontext">Profile</a>
      <button class="no-button buttons" id="logout">Logout</button>
      {{else}}
      <a href="/login" class="buttons buttontext">Login / Register</a>
      {{/if}}
    </div>
  </div>
</header>
<main>
  <div class="container">

    <div class="bookborder">
      <h1 class=" bookdate">Published month : December 2021</h1>
      <img class='book-cover' src='{{book.img_url}}' />
      <h2 class='book-title'>{{book.name}} - {{book.year}}</h2>
      <p class='Author'><span class="textsize">Author: </span>{{book.author}}</p>
      <p class='Synopsis'><span class="textsize">Synopsis:</span>{{book.synopsis}}</p>
      <p class='booklink'><a href="{{book.purchase_link}}" , target="_blank">Purchase Here</a></p>
    </div>

    <div>
      <p><b>Add reviews:</b></p>
      

      <div>
        <form class='new-review-form'>
          <fieldset>
            <div class='form-group'>
              <label for='review-desc' class='mt-4 textsize'>Description:</label>
              <textarea class='form-control' id='review-desc' name='review-desc' rows='3'></textarea>
            </div>

            {{!-- <div class='form-group'>
              <label for='review-rating'>Rate the book (Choose rating between 1-5):</label>
              <input type='number' min='1' max='5' class='form-control' id='review-rating' style="width:100px;" />
            </div> --}}

            <div class='form-group'>
              <div class="stars">
                <p style="textsize">Rate the book</p>
                <form action="" class="formstar">
                  <input class="star star-5" id="star-5-2" type="radio" name="review-rating" value="5"/>
                  <label class="star star-5" for="star-5-2"></label>
                  <input class="star star-4" id="star-4-2" type="radio" name="review-rating" value="4"/>
                  <label class="star star-4" for="star-4-2"></label>
                  <input class="star star-3" id="star-3-2" type="radio" name="review-rating" value="3"/>
                  <label class="star star-3" for="star-3-2"></label>
                  <input class="star star-2" id="star-2-2" type="radio" name="review-rating" value="2"/>
                  <label class="star star-2" for="star-2-2"></label>
                  <input class="star star-1" id="star-1-2" type="radio" name="review-rating" value="1"/>
                  <label class="star star-1" for="star-1-2"></label>
                </form>
              </div>
            </div>

            <div class='form-group'>
              <button type='submit' class='btn btncolorcreate'>Create</button>
            </div>
          </fieldset>
        </form>
      </div>
      
      <div>
        {{#if book.reviews.length}}
        <div class='review-list'>
          <p class="textsize">Current Reviews:</p>
          {{#each book.reviews as |review|}}
          <div class='row mb-2 review-styling'>
            <div class='col-md-8'>
              <p class="textsize1"><b>Description: </b>{{review.review_text}}</p>
              <p class="textsize1"><b>Rating: </b>{{review.rating}}</p>
              <p class="textsize1">Added by: {{review.user.name}}</p>
              <button class='btn btn-sm btncolor' data-id='{{review.review_id}}'> <i class="fas fa-trash icon"></i>DELETE</button>
            </div>
          </div>

          {{/each}}
        </div>
        {{/if}}
      </div>

    </div>
  </div>

</main>


  <script src='./js/review.js'></script>